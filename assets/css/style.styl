*
  margin 0
  padding 0
  -moz-box-sizing border-box
  box-sizing border-box

ul,li
  list-style none

body.constellation
  font-family sans-serif
  font-size 14

  $hilight = #FFE593

  header
    background url(/public/images/bg.jpg)
    color white
    text-align center
    padding 50px 20px
    h1
      font-size 400%
      font-family Helvetica, sans-serif

  &.page-search
    
    form.search-form
      margin 10px
      input.search-field
        padding 5px
        border 2px solid #eee
        font-family inherit
        font-size 200%
        width 100%

    .results
      margin 30px 10px 10px
      h1, h2
        font-size 150%
        margin 10px 0

      .result
        margin 50px 0
        word-wrap break-word

        .directory
          font-size 100%
          color #848484

        .filename
          font-size 150%
          margin 0

        p
          color #888
          padding 5px
          border 1px solid #ccc
          margin 5px 0
            
          em
            color black
            font-weight bold
            background $hilight