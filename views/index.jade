html
  head
    title Constellation | Code search engine
    != css('style')
    != js('client')
  body.page-search.constellation
    header
      h1 Constellation
      h2 Code search engine
    main
      form.search-form
        input.search-field(name="search",value=query)
      if(results)
        .results
          h1 Search results for: #{query}
          ul
            for result in results.body.hits.hits
              li.result
                .directory= pathToDir( result.fields.contents.path )
                h2.filename= pathToFilename( result.fields.contents.path )
                for snippet in result.highlight.contents
                  p!= '...' + sanitizeHtml( snippet, {allowedTags: ['em']} ) + '...'

